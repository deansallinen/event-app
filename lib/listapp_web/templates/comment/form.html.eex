<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%# <%= label f, :message %1> %>
  <%= textarea f, :message, placeholder: "Type your comment here..." %>
  <%= error_tag f, :message %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
